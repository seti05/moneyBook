<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.moneybook">
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:requestLegacyExternalStorage="true"
        android:usesCleartextTraffic="true"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity"/>
        <activity android:name=".SettingsActivity"/>
        <activity android:name=".settings.AssetUpdateActivity"
            android:theme="@android:style/Theme.Dialog"></activity>
        <activity
            android:name=".settings.CateUpdateActivity"
            android:theme="@android:style/Theme.Dialog" />
        <activity
            android:name=".daily.CategorySpinnerActivity"
            android:theme="@android:style/Theme.Dialog" />
        <activity
            android:name=".daily.AssetSpinerActivity"
            android:theme="@android:style/Theme.Dialog" />
        <activity android:name=".daily.RegMoneyBookActivity" />
        <activity android:name=".daily.UpdateMoneyBookActivity" />
        <activity android:name=".PasswordConfirmActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>